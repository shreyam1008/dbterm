---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "dbterm | Minimal Multi-Database Terminal Client";
const description =
  "dbterm is a lightweight terminal UI for PostgreSQL, MySQL, and SQLite with keyboard-first workflows, query editor, and built-in help.";

const installUnix = "curl -fsSL https://raw.githubusercontent.com/shreyam1008/dbterm/main/install.sh | bash";
const installWindows =
  "powershell -NoProfile -ExecutionPolicy Bypass -Command \"irm https://raw.githubusercontent.com/shreyam1008/dbterm/main/install.ps1 | iex\"";
const commandExamples = [
  "dbterm",
  "dbterm --help",
  "dbterm --version",
  "dbterm --info",
  "dbterm --update",
  "dbterm --update 0.3.4",
  "dbterm --uninstall --yes",
  "dbterm --uninstall --purge"
];

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "dbterm",
  applicationCategory: "DeveloperApplication",
  operatingSystem: "Linux, macOS, Windows",
  description,
  url: "https://shreyam1008.github.io/dbterm/",
  downloadUrl: "https://github.com/shreyam1008/dbterm/releases",
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD"
  }
};
---

<BaseLayout title={title} description={description} jsonLd={jsonLd}>
  <main class="shell">
    <header class="hero" style="--delay: 0s">
      <p class="eyebrow">Keyboard-first DB client</p>
      <h1>dbterm</h1>
      <p class="lead">
        One tiny binary to work with PostgreSQL, MySQL, and SQLite without Java, Python,
        or Node runtimes.
      </p>
      <div class="action-row">
        <a class="btn primary" href="https://github.com/shreyam1008/dbterm/releases">Download Latest</a>
        <a class="btn" href="https://github.com/shreyam1008/dbterm">GitHub Repo</a>
      </div>
      <ul class="badge-row">
        <li>~10MB RAM idle</li>
        <li>Cross-platform</li>
        <li>Single binary</li>
      </ul>
      <img src="main_ui.png" alt="dbterm main interface with tables and SQL query editor" loading="lazy" />
    </header>

    <section style="--delay: 0.08s" id="install">
      <h2>Quick install</h2>
      <p>Install in one command. No Go toolchain required.</p>
      <h3>Linux / macOS</h3>
      <pre><code>{installUnix}</code></pre>
      <h3>Windows (PowerShell)</h3>
      <pre><code>{installWindows}</code></pre>
    </section>

    <section style="--delay: 0.14s" id="ways">
      <h2>Ways to use dbterm</h2>
      <div class="cards">
        <article>
          <h3>Ad-hoc SQL checks</h3>
          <p>Jump into any connection, run quick diagnostics, inspect rows, and sort results.</p>
        </article>
        <article>
          <h3>Schema exploration</h3>
          <p>Browse tables fast and use the built-in cheatsheets for PostgreSQL, MySQL, and SQLite.</p>
        </article>
        <article>
          <h3>Ops workflow</h3>
          <p>Use service dashboard shortcuts, run backups (PG/MySQL), and refresh DB state quickly.</p>
        </article>
      </div>
    </section>

    <section style="--delay: 0.2s" id="examples">
      <h2>Command examples</h2>
      <p>Most common commands in day-to-day usage:</p>
      <pre><code>{commandExamples.join("\n")}</code></pre>
    </section>

    <section style="--delay: 0.26s" id="shortcuts">
      <h2>Essential shortcuts</h2>
      <table>
        <thead>
          <tr>
            <th>Shortcut</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>Alt + Enter</code></td>
            <td>Execute query</td>
          </tr>
          <tr>
            <td><code>Alt + H</code></td>
            <td>Open help and SQL cheatsheets</td>
          </tr>
          <tr>
            <td><code>Alt + Q / T / R</code></td>
            <td>Focus query, tables, or results</td>
          </tr>
          <tr>
            <td><code>F5 / Ctrl + F5</code></td>
            <td>Refresh current table or full table list</td>
          </tr>
          <tr>
            <td><code>Ctrl + C</code></td>
            <td>Quit</td>
          </tr>
        </tbody>
      </table>
    </section>
  </main>
</BaseLayout>
